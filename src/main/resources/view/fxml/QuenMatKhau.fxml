<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane
        prefHeight="250.0"
        prefWidth="500.0"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.QuenMatKhau_Controller">

    <!-- ====== HEADER ====== -->
    <top>
        <BorderPane prefHeight="50.0">
            <left>
                <Label text="Đặt lại mật khẩu"
                       styleClass="h1"
                       BorderPane.alignment="CENTER_LEFT">
                    <BorderPane.margin>
                        <Insets left="135"/>
                    </BorderPane.margin>
                </Label>
            </left>
        </BorderPane>
    </top>

    <!-- ====== CONTENT ====== -->
    <center>
        <AnchorPane>
            <children>

                <GridPane layoutX="65" layoutY="25" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="160"/>
                        <ColumnConstraints prefWidth="200"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints prefHeight="30"/>
                        <RowConstraints prefHeight="30"/>
                        <RowConstraints prefHeight="30"/>
                    </rowConstraints>

                    <!-- Mã xác nhận -->
                    <Label text="Nhập mã xác nhận"
                           styleClass="lbl"/>
                    <TextField fx:id="txtmaXacNhan"
                               GridPane.columnIndex="1"
                               styleClass="txt"/>

                    <!-- Mật khẩu mới -->
                    <Label text="Mật khẩu mới"
                           GridPane.rowIndex="1"
                           styleClass="lbl"/>
                    <PasswordField fx:id="txtmatKhauMoi"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"
                                   styleClass="txt"/>

                    <!-- Xác nhận mật khẩu -->
                    <Label text="Nhập lại mật khẩu mới"
                           GridPane.rowIndex="2"
                           styleClass="lbl"/>
                    <PasswordField fx:id="txtxacNhanMatKhau"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"
                                   styleClass="txt"/>
                </GridPane>

                <!-- Buttons -->
                <Button fx:id="btnXacNhan"
                        layoutX="330"
                        layoutY="170"
                        text="Xác nhận"
                        styleClass="btn"
                        onAction="#btnXacNhan"/>

                <Button fx:id="btnLamMoi"
                        layoutX="230"
                        layoutY="170"
                        text="Hoàn tác"
                        styleClass="btn"/>

            </children>
        </AnchorPane>
    </center>

</BorderPane>
