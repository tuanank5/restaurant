<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="-1" prefWidth="-1" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DatBan.ABanHienTai_Controller">

    <!-- ================= TOP ================= -->
    <top>
        <BorderPane prefHeight="100.0">
            <left>
                <AnchorPane prefWidth="300.0">
                    <children>
                        <Button fx:id="btnChoThanhToan" layoutX="30" layoutY="30" styleClass="btn" stylesheets="@../../css/SystemDesign.css" text="Chờ thanh toán" />

                        <Button fx:id="btnDatTruoc" layoutX="180" layoutY="30" styleClass="btn" stylesheets="@../../css/SystemDesign.css" text="Đặt trước" />
                    </children>
                </AnchorPane>
            </left>

            <right>
                <AnchorPane prefWidth="700.0">
                    <children>
                        <Button fx:id="btnDatBan" layoutX="30" layoutY="30" styleClass="btn" stylesheets="@../../css/SystemDesign.css" text="Đặt bàn" />

                        <Label layoutX="130" layoutY="35" styleClass="lbl" stylesheets="@../../css/SystemDesign.css" text="Loại bàn:" />

                        <ComboBox fx:id="cmbLoaiBan" layoutX="200" layoutY="30" prefWidth="150" styleClass="cmb" stylesheets="@../../css/SystemDesign.css" />

                        <Button disable="true" layoutX="387" layoutY="30" stylesheets="@../../css/SystemDesign.css" text="Tìm kiếm">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn" />
                     </styleClass></Button>

                        <TextField fx:id="txtTimKiem" layoutX="470" layoutY="30" styleClass="txt" stylesheets="@../../css/SystemDesign.css" />
                    </children>
                </AnchorPane>
            </right>
        </BorderPane>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <BorderPane maxHeight="Infinity" maxWidth="Infinity">
            <center>
                <VBox maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS">

                    <ScrollPane fitToHeight="true" fitToWidth="true">
                        <content>
                            <GridPane fx:id="gridPaneHD" maxHeight="Infinity" maxWidth="Infinity">
                                <children>
                                    <BorderPane fx:id="borderPane" maxHeight="Infinity" maxWidth="Infinity">

                                        <top>
                                            <BorderPane fx:id="paneNorth" />
                                        </top>

                                        <left>
                                            <BorderPane fx:id="paneWest">
                                                <top>
                                                    <BorderPane fx:id="paneBan" />
                                                </top>
                                                <left>
                                                    <Button fx:id="btnThanhToan" />
                                                </left>
                                                <right>
                                                    <Button fx:id="btnBan" />
                                                </right>
                                            </BorderPane>
                                        </left>

                                        <right>
                                            <BorderPane fx:id="paneEast">
                                                <top>
                                                    <BorderPane fx:id="paneTien" />
                                                </top>
                                                <left>
                                                    <Button fx:id="btnMonAn" />
                                                </left>
                                                <right>
                                                    <Button fx:id="btnKhac" />
                                                </right>
                                            </BorderPane>
                                        </right>

                                    </BorderPane>
                                </children>
                        <columnConstraints>
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                        </rowConstraints>
                            </GridPane>
                        </content>
                    </ScrollPane>

                </VBox>
            </center>
        </BorderPane>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <BorderPane prefHeight="50">
            <left>
                <AnchorPane>
                    <children>
                        <Label layoutX="30" layoutY="15" styleClass="lbl" stylesheets="@../../css/SystemDesign.css" text="Tổng đặt bàn:" />

                        <TextField fx:id="txtTongDatBan" layoutX="125" layoutY="10" prefWidth="50" styleClass="txt" stylesheets="@../../css/SystemDesign.css" />
                    </children>
                </AnchorPane>
            </left>
        </BorderPane>
    </bottom>

</BorderPane>
