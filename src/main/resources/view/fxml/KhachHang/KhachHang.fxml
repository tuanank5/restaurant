<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.KhachHang.KhachHang_Controller">

    <!-- Top Header -->
    <top>
        <BorderPane prefHeight="60.0" style="-fx-background-color: white;">
            <center>
                <Label alignment="CENTER" prefHeight="45.0" prefWidth="357.0" text="Danh sách khách hàng">
                    <font>
                        <Font name="System Bold Italic" size="30.0" />
                    </font>
                </Label>
            </center>
        </BorderPane>
    </top>

    <!-- Center: TableView và Button thao tác -->
    <center>
        <VBox prefHeight="600" prefWidth="900" spacing="10" style="-fx-background-color: white;">
            <!-- Action Buttons & Search -->
            <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="15">
                <Button onAction="#btnThemKhachHang" style="-fx-background-color: green; -fx-text-fill: white;" text="(+) Thêm khách hàng" />
                <Button onAction="#btnXuatExcel" style="-fx-background-color: blue; -fx-text-fill: white;" text="Xuất Excel" />
                <Button onAction="#btnTatCa" style="-fx-background-color: #cc851d; -fx-text-fill: white;" text="Tất cả" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Tìm kiếm:" />
                <TextField fx:id="txtTimKiem" onMouseClicked="#mouseClicked" prefWidth="200" />
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tableView" prefHeight="500">
                <columns>
                    <TableColumn fx:id="tblKhachHang" prefWidth="150" text="Mã khách hàng" />
                    <TableColumn fx:id="tblTenKH" prefWidth="160" text="Tên khách hàng" />
                    <TableColumn fx:id="tblSoDienThoai" prefWidth="150" text="Số điện thoại" />
                    <TableColumn fx:id="tblEmail" prefWidth="150" text="Email" />
                    <TableColumn fx:id="tblHangKH" prefWidth="140" text="Hạng khách hàng" />
                    <TableColumn fx:id="tblDiemTichLuy" prefWidth="150" text="Điểm tích lũy" />
                    <TableColumn fx:id="tblDiaChi" prefWidth="180" text="Địa chỉ" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- HBox phân trang -->
            <HBox fx:id="hBoxPage" alignment="CENTER" prefHeight="40" spacing="10" />
        </VBox>
    </center>

</BorderPane>
